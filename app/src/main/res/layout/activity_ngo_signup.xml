<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"


    tools:context=".Activity.NGOSignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-50dp"
        android:layout_marginRight="-50dp"
        android:src="@drawable/status_bar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:text="NGO Sign-Up"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ngo_profile_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/status_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/profile_avatar1" />

        <ImageView
            android:id="@+id/ngo_profile_pic_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ngo_profile_pic"
            android:layout_marginLeft="-25dp"
            android:layout_marginTop="-24dp"
            android:layout_toRightOf="@id/ngo_profile_pic"
            android:src="@drawable/ic_plus_vector" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ngo_signup_namebox"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="250dp"
            android:layout_marginRight="25dp"

            android:background="@drawable/ngo_signup_background">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ngo_signup_nameinput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ngo_signup_background"
                android:hint="Name"
                android:inputType="text"
                android:padding="10dp" />

        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ngo_signup_descriptionbox"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/ngo_signup_namebox"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"

        android:background="@drawable/ngo_signup_background">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ngo_signup_descriptioninput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ngo_signup_background"
            android:gravity="top"
            android:hint="Description"
            android:inputType="text"
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ngo_signup_addressbox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/ngo_signup_descriptionbox"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"

        android:background="@drawable/ngo_signup_background">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ngo_signup_addressinput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ngo_signup_background"
            android:hint="Address"
            android:inputType="text"
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ngo_signup_contactbox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/ngo_signup_addressbox"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"

        android:background="@drawable/ngo_signup_background">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ngo_signup_contactinput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ngo_signup_background"
            android:hint="Contact"
            android:inputType="text"
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ngo_signup_emailbox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/ngo_signup_contactbox"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"

        android:background="@drawable/ngo_signup_background">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ngo_signup_emailinput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ngo_signup_background"
            android:hint="E-Mail"
            android:inputType="text"
            android:padding="10dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ngo_signup_passwordbox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/ngo_signup_emailbox"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        app:passwordToggleEnabled="true"

        android:background="@drawable/ngo_signup_background">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ngo_signup_passwordinput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ngo_signup_background"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/ngo_signup_submit_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ngo_signup_passwordbox"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:background="@drawable/ngo_signup_button"
        android:elevation="1dp"
        android:fontFamily="@font/poppins"
        android:text="Submit"
        android:textSize="18dp">


    </Button>

    </RelativeLayout>

</ScrollView>
